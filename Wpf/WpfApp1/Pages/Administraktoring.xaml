<Page x:Class="WpfApp1.Pages.Administraktoring"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Administraktoring">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <Button x:Name="login" Content="Login" Margin="0" Click="Login_Click"/>
        <ListView x:Name="stats" Grid.Row="1" Grid.ColumnSpan="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Statistics"
                                DisplayMemberBinding="{Binding [roomName]}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <ListView x:Name="roomUsers" Grid.Column="1" Grid.Row="0" Margin="0,0,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Room users"
                                DisplayMemberBinding="{Binding [Username]}" />
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnKick" Content="Kick" Margin="0" VerticalAlignment="Center"  Click="kickFromRoom_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Page>
