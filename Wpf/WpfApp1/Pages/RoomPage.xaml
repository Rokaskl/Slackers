<Page x:Class="WpfApp1.Pages.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomPage">

    <Grid Name ="pageGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <ListView Grid.Column="0" Grid.Row="0" x:Name="MembersListView" HorizontalAlignment="Stretch" Margin="0,30,10,10" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="0" DisplayMemberBinding="{Binding [username]}" />
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="0,30,0,0">
            <ComboBox  x:Name="cmbStatus" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="120"/>
            <Button  x:Name="btnLogoutRoom" Content="Logout" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" Width="75" Click="BtnLogoutRoom_Click"/>
        </StackPanel>
        <StackPanel x:Name="botomStack" Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" FlowDirection="RightToLeft">
            <Button x:Name="btnStartStop" Content="Start!" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="95"  Height="41" Click="btnStartStop_Click" FlowDirection="LeftToRight"/>
        </StackPanel>
        <Button Grid.Column="2" Grid.Row="1" x:Name="btn_addnote" Content="Add" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="75" Click="Btn_addnote_Click"/>
        <ListView Grid.Column="2" Grid.Row="0" x:Name="NoteListView" HorizontalAlignment="Stretch"  Margin="0,30,0,10" VerticalAlignment="Stretch" Grid.ColumnSpan="2" >
            <ListView.View>
                <GridView>
                    <GridViewColumn
                                 DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn>
                        <!--<TextBox Text="{Binding Path=Message}" Width="100" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"></TextBox>-->

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=Header}" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True"></TextBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>

                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <!--<TextBlock Text="{Binding ElementName=cmbStatus, Path=SelectedItem}"/>-->
    </Grid>
</Page>
