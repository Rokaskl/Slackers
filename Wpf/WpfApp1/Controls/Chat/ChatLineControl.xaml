<UserControl x:Class="WpfApp1.Controls.Chat.ChatLineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls.Chat"
             xmlns:local1="clr-namespace:WpfApp1.Controls.Chat.DesignTimeStaticClasses"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500"
             ToolTip="{Binding CreateDate}">
    <Grid d:DataContext="{x:Static local1:DesignTimeChatLineStatic.chatline}" Background="Transparent" Height="Auto" Width="Auto" IsEnabled="False" RequestBringIntoView="Grid_RequestBringIntoView">
        <StackPanel>
            <TextBlock TextTrimming="CharacterEllipsis" Foreground="DarkGray" Background="Transparent" FontSize="14" Height="20" Text="{Binding NickName}" Padding="12 0 0 5"/>
            <Border Padding="20 4 20 4">
                <TextBlock TextWrapping="Wrap" Padding="4 0 0 0" Text="{Binding Text}" Height="Auto" HorizontalAlignment="Left" Width="Auto" Background="{Binding Brush}"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
