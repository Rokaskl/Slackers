<UserControl x:Class="WpfApp1.Controls.NotifyingButton.NotifyingButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls.NotifyingButton"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="150" Width="auto" Height="auto"
             DataContext="{Binding}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>
    <Grid>
        <Button Content="Friends"/>
        <Border x:Name="Notification_border" HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="20" Height="22" Background="PaleVioletRed" Margin="0, -5, 0, 0" CornerRadius="10" Visibility="{Binding Path=Visibility, FallbackValue=Hidden, Converter={StaticResource BoolToVisConverter}}">
            <Label Content="{Binding Notifications}" Foreground="Black" Width="auto" HorizontalAlignment="Center" FontSize="10" VerticalAlignment="Center" Margin="0"/>
        </Border>
    </Grid>
</UserControl>
