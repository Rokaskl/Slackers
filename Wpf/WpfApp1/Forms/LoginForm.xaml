<Window x:Class="WpfApp1.Forms.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Forms"
        mc:Ignorable="d"
        Title="LoginForm" Height="319" Width="300">
    <StackPanel Margin="20">
        <Label Content="Slackers" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
        <Label Content="Username"/>
        <TextBox Name="Username"/>
        <Label Content="Password"/>
        <PasswordBox Name="Password"/>
        <Button Name="btnLogin" Content="Login" Margin="60 10" Click="btnLogin_Click"/>
        <TextBlock>
            <Hyperlink NavigateUri="http://localhost:4000" RequestNavigate="Hyperlink_RequestNavigate">
                Not registered?
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>
